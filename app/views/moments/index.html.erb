<div class="index-container">

    <h1 class="timeline-title">Timeline</h1>

        <div class="search">
          <%= form_tag moments_path, method: :get, class: "simple-form" do %>
          <%= text_field_tag :query,
            params[:query],
            placeholder: "Try searching for 'Nemo'",
            class: "here"
          %>
            <%= submit_tag "Search", class: "btn-flat" %>
          <% end %>
          </div>
        </div>

        <button type="button" class="btn btn-light" id="all-button">All</button>
        <button type="button" class="btn btn-light" id="video-button">Video</button>
        <button type="button" class="btn btn-light" id="image-button">Image</button>
        <button type="button" class="btn btn-light" id="text-button">Words</button>

    <div class="timeline-feed">

        <% @moments.each do |moment| %>
            <% if moment == nil? %>
                    <p>"not enough data"</p>

            <% else %>

                <div id="video-tab" class="unshow">
                    <% @videos.each do |video| %>
                        <div class="timeline-dates">
                            <p><%= video.created_at.strftime('%B %Y') %></p>
                            <br>
                        </div>

                        <div class="moment-card">
                            <%= video_tag("#{video.media.url}", controls: true, preload: 'true', :class => "moments-media") %>
                        </div>
                    <% end %>
                </div>

                <div id="image-tab" class="unshow">
                <% @images.each do |image| %>

                    <div class="timeline-dates">
                        <p><%= image.created_at.strftime('%B %Y') %></p>
                        <br>
                    </div>
                    <div class="moment-card">
                        <%= link_to (cl_image_tag image.media, :transformation => { :width => 300, :crop => "pad" }, :class => "moments-media"), moment_carrousel_path(image) %>
                    </div>
                <% end %>
                </div>

                <div id="text-tab" class="unshow">
                <% @texts.each do |text| %>

                    <div class="timeline-dates">
                        <p><%= text.created_at.strftime('%B %Y') %></p>
                        <br>
                    </div>

                    <div class="moment-card">
                        <p><%= text.text_content %></p>
                    </div>
                <% end %>
                </div>

                <div class="timeline-dates">
                </div>
                <div class="timeline-moment-list" id="default-index">
                <hr>


                <% if moment.media_type == "video" %>
                    <div class="moment-card">
                        <%= video_tag("#{moment.media.url}", controls: true, preload: 'true', :class => "moments-media") %>
                    </div>

                 <% elsif moment.media_type == "image" %>
                    <div class="moment-card">
                        <%= link_to (cl_image_tag moment.media, :transformation => { :width => 300, :crop => "pad" }, :class => "moments-media"), moment_carrousel_path(moment) %>
                    </div>
                <% end %>

                    <p><%= moment.text_content %></p>
        <% end %>
    <% end %>
    </div>
    </div>
</div>
