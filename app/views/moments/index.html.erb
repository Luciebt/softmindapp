<%= render 'shared/navbar' %>

<div class="index-container">
    <h1 class="timeline-title">Timeline</h1>
       <div class="search">
          <%= form_tag moments_path, method: :get, class: "simple-form" do %>
          <%= text_field_tag :query,
            params[:query],
            placeholder: "Try searching for 'Nemo'",
            class: "here"
          %>
            <%= submit_tag "Search", class: "btn-flat" %>
          <% end %>
        </div>
        <div id="button-box">
            <%
=begin%>
 <%= link_to  "All", moments_path, :class => "btn btn-light all-button moment-button" %>
<%
=end%>
            <button type="button" class="btn btn-light moment-button" id="all-button">All</button>
            <button type="button" class="btn btn-light moment-button" id="video-button">Video</button>
            <button type="button" class="btn btn-light moment-button" id="image-button">Image</button>
            <button type="button" class="btn btn-light moment-button" id="text-button">Words</button>
        </div>
    <div class="timeline-container">
        <% @moments.each do |moment| %>
            <% if moment == nil? %>
                <p>"not enough data"</p>
            <% else %>
        <div class="cards">
            <div id="video-tab" class="unshow">
                <% @videos.each do |video| %>
                    <div class="timeline-dates">
                        <h3><%= video.created_at.strftime('%B %Y') %></h3>
                        <br>
                    </div>
                    <div class="moment-card">
                        <%= video_tag("#{video.media.url}", controls: true, preload: 'true', :class => "moments-media") %>
                    </div>
                <% end %>
            </div>
            <div id="image-tab" class="unshow">
                <% @images.each do |image| %>
                    <div class="timeline-dates">
                        <h3><%= image.created_at.strftime('%B %Y') %></h3>
                        <br>
                    </div>
                    <div class="moment-card">
                        <%= link_to (cl_image_tag image.media, :transformation => { :width => 300, :crop => "pad" }, :class => "moments-media"), moment_carrousel_path(image) %>
                    </div>
                <% end %>
            </div>
                <div id="text-tab" class="unshow">
                    <% @texts.each do |text| %>
                    <div class="timeline-dates">
                        <h3><%= text.created_at.strftime('%B %Y') %></h3>
                        <br>
                    </div>
                    <div class="card-category">
                        <div class="moment-card">
                            <p><%= text.text_content %></p>
                        </div>
                    </div>
                <% end %>
                </div>
        </div>
            <% end %>
    </div>

    <div class="timeline-container" id="default-index">
        <div class="timeline-dates">
            <h3><%= moment.created_at.strftime('%B %Y') %></h3>
            <br>
        </div>
        <% if moment.media_type == "video" %>
            <div class="moment-card">
                <%= video_tag("#{moment.media.url}", controls: true, preload: 'true', :class => "moments-media") %>
                <p class="text-content"><%= moment.text_content %></p>
            </div>
        <% elsif moment.media_type == "image" %>
            <div class="moment-card">
                <%= link_to (cl_image_tag moment.media, :transformation => { :width => 300, :crop => "pad" }, :class => "moments-media"), moment_carrousel_path(moment) %>
                <p class="text-content"><%= moment.text_content %></p>
            </div>
        <% else moment.media == nil %>
            <div class="moment-card">
                <p class="text-content"><%= moment.text_content %></p>
            </div>
        <% end %>
    <% end %>
    </div>
</div>
